<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_register"
    tools:context="com.example.siddharth.finallibrary.author_x_name">
    <EditText
        android:id="@+id/search_by_name_edit_authorx"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter author name"
        android:layout_marginTop="164dp"
        android:textColor="@color/white"
        android:textColorHint="@android:color/white"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/search_by_name_button_authorx"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="#ea4c88"
        android:text="Display"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="126dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/search_by_name_edit_authorx"
        android:layout_alignStart="@+id/search_by_name_edit_authorx" />
</android.widget.RelativeLayout>
